@model NiverAmigos.Entidade.Amigo


<h3>Editar Amigo</h3>
<form method="post" asp-controller="Amigo" asp-action="Edit">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome">
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label for="sobrenome">Sobrenome</label>
        <input type="text" class="form-control" asp-for="Sobrenome">
        <span asp-validation-for="Sobrenome"></span>
    </div>
    <div class="form-group">
        <label for="aniversario">Aniversário</label>
        <input type="date" class="form-control" asp-for="Aniversario">
        <span asp-validation-for="Aniversario"></span>
    </div>

    <a class="btn btn-outline-primary mt-3" asp-action="Index" asp-controller="Amigo">Voltar</a>
    <button type="submit" class="btn btn-primary mt-3">Salvar Amigo</button>
</form>
